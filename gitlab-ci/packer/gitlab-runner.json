{
    "variables": {
        "project_id": null,
        "source_image_family": null,
        "machine_type": "n1-standard-1",
        "ssh_username": "",
        "image_description": "",
        "disk_size": "",
        "disk_type": "",
        "tags": "",
        "network": ""
    },

    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `project_id`}}",
            "image_name": "gitlab-runner-{{timestamp}}",
            "image_family": "gitlab-runner",
            "image_description": "Gitlab runner",
            "source_image_family": "docker-host",
            "zone": "europe-west4-a",
            "ssh_username": "{{user `ssh_username`}}",
            "machine_type": "{{user `machine_type`}}",
            "disk_size": "100",
            "disk_type": "{{user `disk_type`}}",
            "tags": "gitlab-runner",
            "network": "{{user `network`}}"
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "ansible/playbooks/gitlab-runner.yml",
            "ansible_env_vars": [ "ANSIBLE_ROLES_PATH=./ansible/roles" ]
        }
    ]
}
